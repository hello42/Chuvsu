<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulop.chuvsu.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ulop.chuvsu.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ulop.NewsFullView.NewsFullActivity"
            android:label="@string/title_activity_news_full" >
        </activity>

        <provider
            android:name="com.ulop.SyncAdapter.FeedsProvider"
            android:authorities="http://evgenkorobkov.ru:4000/news/last.json"
            android:enabled="true"
            android:exported="false"
            android:syncable="true">
        </provider>

        <service
            android:name="com.ulop.SyncAdapter.AuthenticatorService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
