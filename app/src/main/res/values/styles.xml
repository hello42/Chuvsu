<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">#002c69</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#00BCD4</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#FFC107</item>

        <item name="android:textColor">#212121</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>



    </style>


    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">1dp</item>
        <item name="actionBarSize">1dp</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Title"  parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>

    </style>

    <style name="TabTextStyle"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

</resources>
